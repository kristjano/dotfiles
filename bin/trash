#!/bin/bash

FILE="$1"
EXT=""
TRASH="$HOME/.Trash/"

test -e $1 || echo "trash: ${1}${FILE}: No such file or directory"

if [[ -e "${TRASH}${FILE}" ]]; then
    [[ "$FILE" == *.* ]] && EXT=".${FILE##*.}"
    FILE="${FILE%.*}"

    i=1
    while [[ -e "${TRASH}${FILE}_${i}${EXT}" ]]; do
        let i++
    done

    FILE="${FILE}_${i}${EXT}"

fi

mv -n $1 ${TRASH}${FILE}
